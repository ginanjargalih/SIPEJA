<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail__order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.android.sipeja.order.Detail_Order"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <include
        android:id="@+id/toolbar"
        layout="@layout/detail_order_toolbar">

    </include>

    <ScrollView
        android:layout_marginTop="55dp"
        android:layout_marginBottom="49dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >



                <!--*********Iphone price**********-->

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/iphone6s"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor Order"
                        android:textSize="21dp"
                        android:textColor="@color/colorTex"
                        />

                    <TextView
                        android:id="@+id/price"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:textSize="21dp"
                        android:textColor="@color/colorTex"
                        />
                </LinearLayout>


                <!--*********Shipping**********-->

                <LinearLayout

                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView

                        android:id="@+id/free"
                        android:layout_width="110dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rect"
                        android:text="Lunas/ Belum"
                        android:textColor="#fff"
                        android:gravity="center"

                        />

                    <LinearLayout

                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_weight="1.6"
                            android:id="@+id/est"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Order"
                            android:textSize="13dp"
                            android:textColor="@color/colorSub"
                            />

                        <TextView
                            android:layout_weight="0.8"
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Feb 17-20"
                            android:textSize="13dp"
                            android:textColor="@color/colorTex"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />

                <!--*********Iphone price**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/condition1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lab"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/condition2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kalibrasi"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

                <!--*********Brand**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/brand1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pelanggan"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/brand2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PT. JFE SHOJI TRADE INDONESIA"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>

               <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/size1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama pada sertifikat"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/size2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PT. JFE SHOJI TRADE INDONESIA"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>


                <!--*********weight**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/weight1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat pada sertifikat"
                        android:textColor="@color/colorSub"

                        />

                    <TextView
                        android:id="@+id/weight2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gedung Summitmas I Lt. 8, Jl. Jend. Sudirman Kav. 61-62 Jakarta Selatan 12190"
                        android:textColor="@color/colorTex"

                        />
                </LinearLayout>



                <!--*********show more**********-->

                <LinearLayout
                    android:id="@+id/linear1"
                    android:gravity="center"

                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/show1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHOW MORE"
                        android:textColor="#4c71f5"
                        android:textSize="11dp"
                        android:gravity="center"
                        android:drawableRight="@drawable/arrow"
                        android:drawablePadding="8dp"

                        />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linear2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--*********weight**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/display1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sertifikat dalam Bahasa Inggris"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/display2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ya/ Tidak"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>


                    <!--*********camera**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/camera1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sisa sampel diambil"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/camera2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ya/ Tidak"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>


                    <!--*********video**********-->

                    <LinearLayout

                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/video1"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keterangan"
                            android:textColor="@color/colorSub"

                            />

                        <TextView
                            android:id="@+id/video2"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ok"
                            android:textColor="@color/colorTex"

                            />
                    </LinearLayout>

                    <!--*********Sim**********-->

                    <!--*********show less**********-->

                    <LinearLayout
                        android:id="@+id/showless"
                        android:gravity="center"

                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView

                            android:id="@+id/show2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOW LESS"
                            android:textColor="#4c71f5"
                            android:textSize="11dp"
                            android:gravity="center"
                            android:drawableRight="@drawable/arrow1"
                            android:drawablePadding="8dp"

                            />

                    </LinearLayout>


                </LinearLayout>



                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <!--*********discription**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/disc1"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Pembayaran"
                        android:textColor="@color/colorSub"
                        android:drawableRight="@drawable/arrow2"

                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <!--*********Est. delivery**********-->

                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/estdelivery1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Sampel dan Parameter"
                        android:textColor="@color/colorSub"
                        android:drawableRight="@drawable/arrow2"
                        />



                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/return1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Person"
                        android:textColor="@color/colorSub"
                        />

                    <TextView
                        android:id="@+id/return2"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ikram"
                        android:textColor="@color/colorTex"
                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colordevider"
                    android:padding="16dp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="20dp"

                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/phone"
                            android:layout_gravity="center"
                            android:gravity="bottom"
                            android:onClick="telepon"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/addtocart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Telepon"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"

                        />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:layout_marginTop="20dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/sms"
                            android:layout_gravity="center"
                            android:gravity="bottom"
                            android:onClick="sms"

                            />

                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/share"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="SMS"

                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="#4c71f5"
                            />

                    </LinearLayout>

                    <View

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colordevider"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"

                        />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#f2f2f2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS ORDER"
                        android:padding="16dp"
                        android:textSize="13dp"
                        android:textColor="@color/colorSub"
                        />



                    <com.example.android.sipeja.order.ExpandableHeightListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"/>



                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <!--<ListView-->
    <!--android:id="@+id/listview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--/>-->


    <!--****buy****-->
    <Button
        android:id="@+id/buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4c71f5"
        android:textSize="16dp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
